{
  "name": "Personal Finance Tracker (Full-Stack)",

  // ✅ Use a prebuilt container that includes Python, Node.js, Git, etc.
  "image": "mcr.microsoft.com/devcontainers/universal:2",

  // ✅ Run once after Codespace is created:
  // - Create a Python venv
  // - Activate it
  // - Upgrade pip
  // - Install backend deps
  // - Install frontend deps
  "postCreateCommand": "python -m venv .venv && source .venv/bin/activate && pip install --upgrade pip && pip install -r finance-tracker/backend/requirements.txt && npm install --prefix finance-tracker/frontend",

  // ✅ Auto-start backend (Flask) and frontend (Vite) when the Codespace opens
  "postStartCommand": "source .venv/bin/activate && python finance-tracker/backend/app.py & cd finance-tracker/frontend && npm run dev &",

  // ✅ Forward ports for Flask + Vite
  "forwardPorts": [5000, 5173],

  "portsAttributes": {
    "5000": {
      "label": "Backend (Flask API)"
    },
    "5173": {
      "label": "Frontend (Vite App)",
      "onAutoForward": "openBrowser"
    }
  },

  // ✅ Recommended VS Code settings + extensions
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": ".venv/bin/python",
        "terminal.integrated.defaultProfile.linux": "bash"
      },
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}
