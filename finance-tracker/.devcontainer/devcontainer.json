{
  "name": "Personal Finance Tracker (Full-Stack)",

  // ✅ Use a prebuilt image with Python + Node.js
  "image": "mcr.microsoft.com/devcontainers/universal:2",

  // ✅ Runs ONCE when Codespace is created (installs Python + Node deps)
  "postCreateCommand": "pip install -r finance-tracker/backend/requirements.txt && npm install --prefix finance-tracker/frontend",

  // ✅ Forward backend (Flask) and frontend (Vite) ports
  "forwardPorts": [5000, 5173],

  // ✅ Friendly labels & auto-open frontend
  "portsAttributes": {
    "5000": {
      "label": "Backend (Flask API)"
    },
    "5173": {
      "label": "Frontend (Vite App)",
      "onAutoForward": "openBrowser"
    }
  },

  // ✅ Recommended VS Code extensions
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "esbenp.prettier-vscode",
        "bradlc.vscode-tailwindcss",
        "ms-azuretools.vscode-docker"
      ]
    }
  }
}
